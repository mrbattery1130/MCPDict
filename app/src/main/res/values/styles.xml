<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
        <item name="android:itemTextAppearance">@style/MenuItemStyle</item>
    </style>

    <style name="ActionBarStyle" parent="android:Widget.ActionBar">
        <item name="android:background">#00AAFF</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleTextStyle</item>
    </style>

    <style name="ActionBarTitleTextStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="EditTextStyle" parent="android:Widget.EditText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SpinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="MenuItemStyle" parent="android:TextAppearance.Widget.IconMenu.Item">
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Styles for TextViews -->
    <style name="FontLabel">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FontSearchResultEntry">
        <item name="android:textColor">#9D261D</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="FontDetail">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="FontDim">
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="FontFavoriteEntry">
        <item name="android:textColor">#9D261D</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!-- Styles for ImageViews -->
    <style name="ImageDetail">
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_width">26dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!-- Styles for CheckBoxes -->
    <style name="CheckBoxOption">
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
